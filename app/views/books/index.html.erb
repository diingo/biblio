<h1>Listing books</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th><%= link_to '+ New Book', new_book_path %></th>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Isbn</th>
    
    <th>Actions </th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td width="50px">
        <% if book.picture.present? %>
        <%= image_tag(book.picture_url)%>
        <% elsif book.goodreadscover.present? %>
        <%= image_tag book.goodreadscover %>
        <% end %>
    </td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.isbn %></td>
    <td>
        <%= link_to 'Show', book %>
        <%= link_to 'Edit', edit_book_path(book) %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

